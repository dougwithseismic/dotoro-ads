{
  "name": "@repo/email",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./templates": {
      "types": "./dist/templates/index.d.ts",
      "import": "./dist/templates/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src/",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "email:dev": "email dev --dir ./src/emails --port 3001"
  },
  "dependencies": {
    "@react-email/components": "^1.0.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "resend": "^6.6.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.0.0",
    "@types/react": "^19.1.6",
    "typescript": "^5.9.0",
    "vitest": "^4.0.16"
  }
}
